<ul class="posts">
<% @posts.each do |post| %>
<li class="post">
  <h1><a href="/<%= post.id %>.html"><%= post.title %></a></h1>
	<div class='post-header'>
		<div class='post-date'><%= human_date post.published_on %><br/>
			(<%= post.comments.size %> <a href="http://<%= hostname %>/<%= post.id %>.html#comments">comments</a>)</div>
	</div>
  <span class="perex"><%= post.perex %> </span>
	<div class='more'>
		<a href='/<%= post.id %>.html'>read more</a>
	</div>
</li>
<% end %>
</ul>

